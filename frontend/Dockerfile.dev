# Build stage
FROM node:20-alpine AS build
WORKDIR /app

# Copy package files
COPY package.json ./

# Install dependencies
RUN npm install

# Copy source files
COPY . .

# Build application for development (no production optimizations)
RUN npm run build

# Runtime stage with nginx proxy to backend
FROM nginx:alpine
WORKDIR /usr/share/nginx/html

# Copy development nginx config with API proxy
COPY nginx.dev.conf /etc/nginx/conf.d/default.conf

# Copy built files from build stage
COPY --from=build /app/dist .

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
