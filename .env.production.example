# ===========================================
# Production Environment Configuration
# Copy this file to .env.production and fill in your values
# ===========================================

# PostgreSQL Database
POSTGRES_DB=botsfortrading
POSTGRES_USER=botsfortrading_user
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# JWT Configuration (MUST change this!)
JWT_SECRET=CHANGE_ME_MIN_32_CHARACTERS_SECRET_KEY
JWT_ISSUER=CryptoPizzaAPI
JWT_AUDIENCE=CryptoPizzaClient
JWT_EXPIRY_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRY_DAYS=7

# CORS Origins
CORS_ORIGINS=https://cryptopizza.pl,https://www.cryptopizza.pl

# Admin Account (Created on first run)
ADMIN_EMAIL=admin@cryptopizza.pl
ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD

# Frontend
VITE_API_URL=https://cryptopizza.pl
VITE_APP_NAME=CryptoPizza Trading
